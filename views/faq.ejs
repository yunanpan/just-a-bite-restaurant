<!DOCTYPE html>
<html lang="en">
  <%- include('./template/head') %>
<body>
  <!-- 導覽列 -->
  <%- include('./template/navbar') %>

  <!-- 問題 -->
  <section class="section">
    <h1 class="title">FAQ - 常見問題</h1>
    <ul class="questions">
      <% faqs.forEach(faq => { %>
        <li class="question question__answer-hidden">
          <div class="question__num">Q<%= faq.order %>:</div>
          <div class="question__content">
            <div class="question__topic"><%= faq.title %></div>
            <p class="question__answer"><%= faq.content %></p>
          </div>
        </li>
      <% }) %>    
    </ul>
  </section>

  <!-- FOOTER -->
  <%- include('./template/footer') %>

  <script src="/js/faq.js"></script>
</body>
</html>